// macro from lite
CC_USE_WEBP = 0
CC_USE_TIFF = 0
LITE_DEFINITIONS = USE_AUDIO=1 USE_EDIT_BOX=1 USE_WEB_VIEW=1 USE_VIDEO=0 CC_USE_WEBP=$(CC_USE_WEBP) CC_USE_TIFF=$(CC_USE_TIFF) USE_GFX_RENDERER=0 USE_DRAGONBONES=0 USE_SPINE=0 USE_MIDDLEWARE=0 USE_PARTICLE=0

// global config
// FEATURE_DEBUG_JS_DEBUGGER this value should always be 0, or will use private api in iOS
FEATURE_NETWORK_DOWNLOAD = 1
FEATURE_DEBUG_VCONSOLE = 1
GLOBAL_DEFINITIONS = DEPRECATED_IMPLEMENT=1 FEATURE_NETWORK_DOWNLOAD=$(FEATURE_NETWORK_DOWNLOAD) FEATURE_NETWORK_UPLOAD=1 FEATURE_NETWORK_XML_HTTP_REQUEST=1 FEATURE_IMAGE_WEBP=$(CC_USE_WEBP) FEATURE_IMAGE_TIFF=$(CC_USE_TIFF) FEATURE_DEBUG_VCONSOLE=$(FEATURE_DEBUG_VCONSOLE) FEATURE_DEBUG_CRASH_DUMP=0 FEATURE_FONT_FAMILY_FROM_FONT=1 FEATURE_DEBUG_JS_DEBUGGER=1 FEATURE_IMAGE_LOAD_FROM_URL=$(FEATURE_NETWORK_DOWNLOAD) FEATURE_RECORDER=0 FEATURE_NETWORK_WEBSOCKET=1 FEATURE_LICENSE=1 FEATURE_SHARED_PLUGIN=1

// runtime
RUNTIME_DEFINITIONS = USE_RELATIVE_REQUIRE=0 USE_FILE_PERMISSION_VALIDATION=1 USE_WATERMARK=3 SHIP_PRODUCT=1 USE_ANALYTICS=0 USE_VCONSOLE=$(FEATURE_DEBUG_VCONSOLE) JSB_RT_LOG_LEVEL=3

GCC_PREPROCESSOR_DEFINITIONS = $(inherited) $(LITE_DEFINITIONS) $(GLOBAL_DEFINITIONS) $(RUNTIME_DEFINITIONS)
